<%= link_to "Log out", destroy_user_session_path, method: :delete %>
<% if current_user.admin? %>
  <%= render 'verification_form' %>
<% else %>
  <h1>I miei tickets</h1>
  <table>
    <thead>
      <tr>
        <td>Acquistato</td>
        <td>Scaduto o valido fino alle</td>
      </tr>
    </thead>

    <tbody>
      <% current_user.virtual_tickets.each do |t| %>
        <tr>
          <td><%= t.created_at %></td>
          <td><%= t.expired? ? 'Scaduto' : t.valid_until.strftime('%H:%M') %></td>
          <td><%= link_to 'Visualizza', virtual_ticket_path(t) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= form_tag new_virtual_ticket_path, method: :get do %>
    <%= button_tag 'Richiedi' %>
  <% end %>
<% end %>
